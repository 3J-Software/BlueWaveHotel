@{
    ViewData["Title"] = "2+1 Room Details";
}

<link rel="stylesheet" href="~/css/room-details.css" />

<div class="room-details-container">
    <h2 class="room-title">2+1 Room</h2>

    <div class="room-details">
        <div class="room-image">
            <img src="~/images/room4.jpg" alt="2+1 Room" />
        </div>
        <div class="room-info">
            <h3>Room Overview</h3>
            <p>A spacious room designed for families, offering a double bed and an additional single bed for extra comfort.</p>

            <h4>Amenities</h4>
            <ul>
                <li>Free Wi-Fi</li>
                <li>Flat-screen TV</li>
                <li>Air conditioning</li>
                <li>Double bed and single bed</li>
                <li>Mini-bar</li>
            </ul>

            <h4>Price per night</h4>
            <p>$180 per night</p>
        </div>
    </div>

    <a href="/Reservation" class="back-link">Book Now</a>
</div>