@{
    ViewData["Title"] = "1+1 Room Details";
}

<link rel="stylesheet" href="~/css/room-details.css" />

<div class="room-details-container">
    <h2 class="room-title">1+1 Room</h2>

    <div class="room-details">
        <div class="room-image">
            <img src="~/images/room2.jpg" alt="1+1 Room" />
        </div>
        <div class="room-info">
            <h3>Room Overview</h3>
            <p>This spacious room includes a separate living area, ideal for couples or friends traveling together, offering both comfort and privacy.</p>

            <h4>Amenities</h4>
            <ul>
                <li>Free Wi-Fi</li>
                <li>Flat-screen TV</li>
                <li>Air conditioning</li>
                <li>Separate living area</li>
            </ul>

            <h4>Price per night</h4>
            <p>$120 per night</p>
        </div>
    </div>

    <a href="/Reservation" class="back-link">Book Now</a>
</div>