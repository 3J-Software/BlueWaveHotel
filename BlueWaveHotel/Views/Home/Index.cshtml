﻿@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Full-width Carousel</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Aladin&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Julius+Sans+One&family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="/css/Index.css" rel="stylesheet" />


</head>
<body>
    <div class="container-fluid p-0">
        <div class="col-lg-12 bg-black g-0">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>

                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active c-item">
                        <img src="~/images/photo4.jpg" class="d-block w-100 c-img" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="slogans">The Meeting Point of Comfort and Luxury</h5>
                        </div>
                    </div>
                    <div class="carousel-item c-item">
                        <img src="~/images/photo1.jpg" class="d-block w-100 c-img" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="slogans">The Sound of the Sea, The Serenity of Blue</h5>

                        </div>
                    </div>
                    <div class="carousel-item c-item">
                        <img src="~/images/photo2.jpg" class="d-block w-100 c-img" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="slogans">Greet the Sun, Enjoy the Holiday</h5>
                        </div>
                    </div>
                    <div class="carousel-item c-item">
                        <img src="~/images/photo3.jpg" class="d-block w-100 c-img" alt="Fourth slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="slogans">Luxurious Rooms, Unmatched Elegance</h5>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>



    <div class="container-xxl py-5" style="margin-top:70px;">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-lg-6 fade-in ">
                    <h6 class="section-title text-start sandColor-text text-uppercase" style="font-size:25px;">About Us</h6>
                    <h1 class="mb-4 red-text" style="font-size:30px;">Welcome to <span class="blue-text" style="font-size:35px;">BlueWave</span></h1>
                    <p class="mb-4 sandColor-text" style="font-size:25px;">
                        Discover a world of elegance and tranquility at BlueWave Hotel. Nestled along the stunning coastline,
                        our 5-star luxury resort offers unparalleled amenities and personalized service.
                        Whether you're here to relax on pristine beaches, indulge in gourmet dining, or rejuvenate
                        at our world-class spa, every moment promises to be unforgettable. We invite you to enjoy the
                        finest in comfort and style, where your satisfaction is our highest priority.
                    </p>
                    <div class="row g-3 pb-4">
                        <div class="col-sm-4">
                            <div class="border rounded p-1">
                                <div class="border rounded text-center p-4">
                                    <i class="fa fa-hotel fa-2x text-warning mb-2"></i>
                                    <h2 class="counter mb-1" data-count="78">0</h2>
                                    <p class="mb-0">Rooms</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="border rounded p-1">
                                <div class="border rounded text-center p-4">
                                    <i class="fa fa-users-cog fa-2x text-warning mb-2"></i>
                                    <h2 class="counter mb-1" data-count="150">0</h2>
                                    <p class="mb-0">Staffs</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="border rounded p-1">
                                <div class="border rounded text-center p-4">
                                    <i class="fa fa-users fa-2x text-warning mb-2"></i>
                                    <h2 class="counter mb-1" data-count="9999">0</h2>
                                    <p class="mb-0">Clients</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-warning py-3 px-5 mt-2 text-light" href="">Explore More</a>
                </div>
                <div class="col-lg-6">
                    <div class="row g-3 image-container">
                        <div class="col-6 text-end">
                            <img class="img-fluid rounded w-75 wow zoomIn" src="~/images/photo1.jpg" style="margin-top: 25%;">
                        </div>
                        <div class="col-6 text-start">
                            <img class="img-fluid rounded w-100 wow zoomIn" src="~/images/photo2.jpg">
                        </div>
                        <div class="col-6 text-end">
                            <img class="img-fluid rounded w-50 wow zoomIn" src="~/images/photo3.jpg">
                        </div>
                        <div class="col-6 text-start">
                            <img class="img-fluid rounded w-75 wow zoomIn" src="~/images/photo4.jpg">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="container">


        <div style="margin-top:70px;">
            <h2 class="title">Campaigns</h2>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                <div class="col">
                    <div class="card h-100 fade-in">
                        <img src="~/images/photo1.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Ocean Breeze Getaway</h5>
                            <p class="card-text">Escape to the serene beaches and enjoy exclusive discounts on ocean-view rooms. Includes complimentary breakfast and a sunset cruise for two.</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/photo2.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Relax & Rejuvenate Package</h5>
                            <p class="card-text ">
                                Pamper yourself with a full spa day, including massages, facials, and access to our wellness center. Perfect for those looking to unwind and refresh.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <img src="~/images/photo3.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Family Fun Adventure</h5>
                            <p class="card-text">
                                Bring the whole family and take advantage of special rates on family suites. Includes kids’ club activities, free meals for children, and a day trip to the local water park.
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>



        <div class="container my-5">
            <h2 class="title">Our Services</h2>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                <!-- Rooms & Apartment -->
                <div class="col">
                    <div class="card text-center p-4">
                        <div class="icon">
                            <i class="fas fa-bed"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Rooms & Apartment</h5>
                            <p class="card-text">Luxurious rooms and apartments to make your stay comfortable and memorable.</p>
                        </div>
                    </div>
                </div>

                <!-- Food & Restaurant -->
                <div class="col">
                    <div class="card text-center p-4">
                        <div class="icon">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Food & Restaurant</h5>
                            <p class="card-text">A variety of delicious dishes from around the world, served at our in-house restaurant.</p>
                        </div>
                    </div>
                </div>

                <!-- Spa & Fitness -->
                <div class="col">
                    <div class="card text-center p-4">
                        <div class="icon">
                            <i class="fas fa-spa"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Spa & Fitness</h5>
                            <p class="card-text">Rejuvenate your body and mind with our exclusive spa and fitness services.</p>
                        </div>
                    </div>
                </div>

                <!-- Sports & Gaming -->
                <div class="col">
                    <div class="card text-center p-4">
                        <div class="icon">
                            <i class="fas fa-football-ball"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Sports & Gaming</h5>
                            <p class="card-text">A wide range of sports and gaming activities to keep you entertained.</p>
                        </div>
                    </div>
                </div>

                <!-- Event & Party -->
                <div class="col">
                    <div class="card text-center p-4">
                        <div class="icon">
                            <i class="fas fa-birthday-cake"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Event & Party</h5>
                            <p class="card-text">Celebrate your special occasions with our customizable event and party services.</p>
                        </div>
                    </div>
                </div>

                <!-- GYM & Yoga -->
                <div class="col">
                    <div class="card text-center p-4">
                        <div class="icon">
                            <i class="fas fa-dumbbell"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">GYM & Yoga</h5>
                            <p class="card-text">Stay fit and relaxed with our fully-equipped gym and peaceful yoga sessions.</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script src="~/js/wow.js"></script>
    <script src="https://unpkg.com/scrollreveal"></script>
    <script src="~/js/Index.js"></script>
</body>
</html>