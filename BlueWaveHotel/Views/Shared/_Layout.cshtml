<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlueWaveHotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlueWaveHotel.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Aladin&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/LayoutStyle.css" type="text/css"/>
    <style>
        /* Arka plan rengi */
        .custom-bg {
            background-color: #FFF9D4; /* Soluk sarı arka plan */
        }

        /* Logo stil ayarları */
        .navbar-brand {
            font-family: 'Brush Script MT', cursive;
            font-size: 1.8rem;
            color: #002D62; /* Mavi yazı rengi */
            text-align: center;
        }

        .center-logo {
            width: 220px;
            margin-top: -10px;
        }

        /* Sol taraftaki Campaign, Reservation ve Rooms için stil */
        .custom-left-link {
            font-family: 'Aladin', cursive;
            color: #e03e24 !important;
            font-size: 1.8rem !important;
            margin-right: 20px !important;
        }

            .custom-left-link:hover {
                color: #FF4500; /* Hover ile turuncu geçiş */
                text-decoration: underline;
            }

        /* Sağdaki Login ve Register için stil */
        .custom-right-link {
            font-family: 'Aladin', cursive;
            color: #1a4870 !important;
            font-size: 1.8rem !important;
            margin-left: 20px !important;
        }

            .custom-right-link:hover {
                color: #FF4500; /* Hover ile turuncu geçiş */
                text-decoration: underline;
            }
    </style>
</head>
<body>


    <header>
        
        <nav class="navbar navbar-expand-sm navbar-light custom-bg border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand d-lg-none" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo.png" alt="Logo" class="center-logo">
                </a>

                <!-- Hamburger Menu Icon for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Left Links -->
                    <ul class="navbar-nav col-4 mx-auto">
                        <li> <a class="nav-link custom-left-link" asp-area="" asp-controller="Home" asp-action="Index">Campaign</a></li>
                        <li> <a class="nav-link custom-left-link" asp-area="" asp-controller="Home" asp-action="Privacy">Reservation</a></li>
                        <li> <a class="nav-link custom-left-link" asp-area="" asp-controller="Home" asp-action="Rooms">Rooms</a></li>
                   </ul>
                </div>
                    <!-- Center Logo -->

                <div class="d-none col-3 d-lg-block">
                    <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="/images/logo.png" alt="Logo" class="center-logo">
                    </a>
                </div>
                   

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Left Links -->
                    <ul class="navbar-nav col-5 ">
                        <li> <a class="nav-link custom-right-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li> <a class="nav-link custom-right-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
                    </ul>
                </div>

                </div>
           
        </nav>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="waves">
            <div class="wave" id="wave1"></div>
            <div class="wave" id="wave2"></div>
            <div class="wave" id="wave3"></div>
            <div class="wave" id="wave4"></div>
        </div>
        <ul class="Links">
            <li><a href="#">Policy</a> </li>
            <li><a href="#">Contact</a> </li>
            <li><a href="#">About</a></li>
        </ul>
    </footer>

    @* <footer class="border-top footer text-muted">
        <div class="container-fluid" id="footerr">
            <div class="d-flex justify-content-center align-items-center">
                <div class="card text-center" style="width: 18rem; background-color: darkblue; opacity: 0.3;">
                    <div class="card-body">
                        <p>Lorem Ipsum@2024</p>
                        <a asp-action="" asp-area="" asp-controller="">Policy</a>
                        <a asp-action="" asp-area="" asp-controller="">Contact</a>
                        <a asp-action="" asp-area="" asp-controller="">About</a>
                    </div>
                </div>
            </div>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
