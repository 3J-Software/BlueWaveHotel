<script>
	$(document).ready(function () {
		// Sayfa yüklendiğinde ilgili elementleri gizle
		$('.calendar').hide();
		$('.tabs').hide();
		$('.available').hide();
		$('.unavailable').hide();

		// Başlık tıklanınca elementleri göster/gizle
		$("#Head").click(function () {
			$('.calendar').toggle();
			$('.tabs').toggle();
			$('.available').toggle();
			$('.unavailable').toggle();
		});
	});
</script>