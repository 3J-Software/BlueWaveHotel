@model ReservationViewModel

<div class="card mb-12 rounded-3">
	<div class="row g-0">
		<div class="col-md-4">
			<img src="~/images/room1.jpg" class="img-fluid rounded-start">
		</div>
		<div class="col-md-6">
			<div class="card-body">

				<h5 class="card-title">Room Name</h5>
				<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
				<div class="row" style="margin-top:50px;">
					<div class="col-4">
						<div class="rezinfoItem" style="max-width:100%;">
							<div class="rezLabel">
								<i class="fa-solid fa-bed"></i>
							</div>
							<select class="form-select">
								<option value="0" disabled selected>Room Count</option>
								<option value="1">1</option>
								<option value="2">2</option>
								<option value="3">3</option>
								<option value="4">4</option>
								<option value="5">5</option>
								<option value="6">6</option>
								<option value="7">7</option>
								<option value="8">8</option>
								<option value="9">9</option>
								<option value="10">10</option>
							</select>
						</div>
					</div>
					<div class="col-4 align-items-center d-flex">
						<div class="card-text " style="font-size:1.4rem; font-weight:bold;">1000₺</div>
					</div>
				</div>

				<!-- Buton kısmı -->
				<div class="d-flex mt-3">
					<button class="btn btn-success px-4 py-2" style="font-size: 1.2rem; border-radius: 10px;">Buy</button>
				</div>

			</div>
		</div>
	</div>
</div>
<div class="col-md-2">
	<div class="card-body"></div>
</div>